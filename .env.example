# =============================================================================
# PARTNERS CRM - Variáveis de Ambiente
# =============================================================================
# Copie este arquivo para .env e preencha com valores reais
# NUNCA commite o arquivo .env com valores reais!
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/partners_crm

# -----------------------------------------------------------------------------
# JWT (JSON Web Tokens) - OBRIGATÓRIO EM PRODUÇÃO
# -----------------------------------------------------------------------------
# Gerar com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=CHANGE_THIS_TO_RANDOM_256_BITS_SECRET_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_256_BITS_SECRET

# -----------------------------------------------------------------------------
# SESSION
# -----------------------------------------------------------------------------
SESSION_SECRET=your_session_secret_here_minimum_32_chars

# -----------------------------------------------------------------------------
# SERVER
# -----------------------------------------------------------------------------
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# REPLIT (Opcional)
# -----------------------------------------------------------------------------
REPL_ID=
ISSUER_URL=https://replit.com/oidc

# -----------------------------------------------------------------------------
# APIs EXTERNAS (Opcional)
# -----------------------------------------------------------------------------
HUBSPOT_API_KEY=
STRIPE_SECRET_KEY=
SENTRY_DSN=

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=info
